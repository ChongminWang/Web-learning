.songDetailContainer {
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.songDetailBackground {
  width: 100vw;
  height: 100vh;
  background-position: center;
  background-size: auto 100%;
  filter: blur(5px);
  position: fixed;
  z-index: -1;
}

.author {
  color: rgba(255, 255, 255, 0.65);
  font-size: 40rpx;
  margin: 20rpx 0;
}

/* 摇杆底座 */
.circle {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #ddd;
  margin: 10rpx 0;
  z-index: 2;
}

.needle {
  position: relative;
  left: 60rpx;
  top: -45rpx;
  z-index: 1;

  width: 192rpx;
  height: 274rpx;
  /* 旋转的中心点 */
  transform-origin: 40rpx 0;
  transition: 1s;
}

.needle.rotate {
  /* rotate 旋转 */
  transform: rotate(-30deg);
}

/* 磁盘 */
.discContainer {
  position: relative;
  top: -190rpx;

  width: 598rpx;
  height: 598rpx;
}

.discAnimation {
  animation: disc 8s linear infinite;
  /* 延时播放（等待指针动画播放完成） */
  animation-delay: 0.8s;
}

/*
*  @keyframes：设置动画帧 
*      1、from to
*          - 适用于简单的动画，只有起始帧和结束帧
*      2、百分比
*          - 适用于复杂的动画，不止两帧
*/
@keyframes disc {
  from {
    
  }

  to {
      transform: rotate(360deg);
  }
}

.disc {
  width: 100%;
  height: 100%;
}

.musicImg {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;

  width: 370rpx;
  height: 370rpx;
  border-radius: 50%;
}

/* 底部控制区域 */
.musicControl {
  position: absolute;
  bottom: 40rpx;
  left: 0;

  width: 100%;
  display: flex;
  /* border-top: 15rpx solid rgba(0, 0, 0, 0.5);
  padding-top: 25rpx; */
}

.musicControl text {
  width: 20%;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  color: rgba(255, 255, 255, 0.8);
  font-size: 50rpx;
}

.musicControl text.big {
  font-size: 100rpx;
}

/* 进度条 */
.progressControl {
  position:absolute;
  bottom: 160rpx;

  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
}

.progressControl text {
  margin: 0 20rpx;
  color: rgba(255, 255, 255, 0.5);
  font-size: 20rpx;
}

.barControl {
  flex: 1;
  height: 5rpx;
  margin: auto;
  background-color: rgba(255, 255, 255, 0.3);
}

.audio-currentTime-Bar {
  height: 100%;
  background-color: rgba(255, 255, 255, 0.5);
  position: relative;
}

.audio-circle {
  position: absolute;
  right: 0;
  top: -4.5rpx;

  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: white;
}